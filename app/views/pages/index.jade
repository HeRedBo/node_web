
extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-primary
          .panel-heading
            h3 #{cat.named}
            .panel-body
              if cat.movies && cat.movie.length > 0
                each item in movies 
                  .col-md-2
                    .thumbnail
                      a(href="./movie/#{item._id}")
                        img(src="#{item.poster}", alt="#{item.title}")
                      .caption
                        h3 #{item.title}
                        p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片

