extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post",action="/admin/category/save")
        if category._id
          input(type="hidden",name="category[_id]",value="#{category._id}")
        .form-group
            label.col-sm-3.control-label(for="inputCategory") 电影分类
            .col-sm-7
                input#inputTitle.form-control(type="text",name="category[name]",value="#{category.name}")
         .form-group
            .col-sm-offset-2.col-sm-7
                button.btn.btn-default(type="sumbit") 录入