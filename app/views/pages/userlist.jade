extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 用户名
            th 创建时间
            //th 查看
            //th 更新
            th 删除
        tbody 
          each item in users 
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
              //td: a(target="_brank",href="../user/#{item._id}") 查看
              //td: a(target="_brank",href="../user/update/#{item._id}") 修改
              td
                button.btn.btn-danger.delUser(type="button",data-id="#{item._id}") 删除
  script(src="/javascripts/admin.js")